{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "timezone": "Europe/Berlin",
  "schedule": [
    "every weekend"
  ],
  "reviewers": [
    "skjnldsv"
  ],
  "labels": [
    "dependencies"
  ],
  "rangeStrategy": "bump",
  "rebaseWhen": "conflicted",
  "ignoreUnstable": false,
  "baseBranches": [
    "master",
    "stable28",
    "stable27"
  ],
  "enabledManagers": [
    "npm"
  ],
  "ignoreDeps": [
    "node",
    "npm"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "packageRules": [
    {
      "groupName": "cypress",
      "matchPackagePatterns": [
        "^@cypress/",
        "cypress",
        "eslint-plugin-cypress"
      ]
    },
    {
      "groupName": "nextcloud",
      "matchPackagePatterns": [
        "^@nextcloud/"
      ]
    },
    {
      "groupName": "dockerode",
      "matchPackageNames": [
        "@types/dockerode",
        "dockerode"
      ]
    },
    {
      "groupName": "typescript",
      "matchPackageNames": [
        "tslib",
        "typescript"
      ]
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "matchBaseBranches": [
        "stable28",
        "stable27",
        "stable26"
      ],
      "enabled": false
    },
    {
      "matchPackageNames": [
        "vue"
      ],
      "allowedVersions": "<3"
    }
  ]
}
